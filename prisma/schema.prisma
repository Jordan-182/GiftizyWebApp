generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wishlist {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt
  name            String
  description     String?
  isEventWishlist Boolean  @default(false) @map("is_event_wishlist")
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  profileId       String
  profile         Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@map("wishlists")
}

model User {
  id                  String       @id @default(uuid())
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  name                String
  email               String       @unique
  emailVerified       Boolean      @default(false)
  image               String?
  birthDate           DateTime?
  friendCode          String       @unique
  role                UserRole     @default(USER)
  banExpires          DateTime?
  banReason           String?
  banned              Boolean?     @default(false)
  accounts            Account[]
  sessions            Session[]
  wishlist            Wishlist[]
  profile             Profile[]
  avatarId            String?
  avatar              Avatar?      @relation(fields: [avatarId], references: [id], onDelete: SetNull)
  sentFriendships     Friendship[] @relation("FriendshipSender")
  receivedFriendships Friendship[] @relation("FriendshipReceiver")

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model Avatar {
  id        String   @id @default(cuid())
  url       String
  createdAt DateTime @default(now())

  users    User[]
  profiles Profile[]
}

model Profile {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  name          String
  birthDate     DateTime?
  image         String?
  isMainProfile Boolean    @default(false)
  userId        String
  friendCode    String?
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  avatarId      String?
  avatar        Avatar?    @relation(fields: [avatarId], references: [id], onDelete: SetNull)
  wishlists     Wishlist[]

  @@map("profiles")
}

model Session {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expiresAt      DateTime
  token          String   @unique
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(uuid())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  identifier String
  value      String
  expiresAt  DateTime

  @@map("verifications")
}

model Friendship {
  id         String           @id @default(cuid())
  createdAt  DateTime         @default(now())
  senderId   String
  receiverId String
  status     FriendshipStatus @default(PENDING)

  sender   User @relation("FriendshipSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("FriendshipReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
  @@map("friendships")
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
  BLOCKED
}
