generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wishlist {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt
  name            String
  description     String?
  isEventWishlist Boolean  @default(false) @map("is_event_wishlist")
  profileId       String   @map("profile_id")
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("wishlists")
}

model User {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @default(now()) @updatedAt
  name          String
  email         String     @unique
  emailVerified Boolean    @default(false)
  image         String?
  birthDate     DateTime?
  role          UserRole   @default(USER)
  banExpires    DateTime?
  banReason     String?
  banned        Boolean?   @default(false)
  accounts      Account[]
  sessions      Session[]
  Wishlist      Wishlist[]
  avatarId      String?
  avatar        avatar?    @relation(fields: [avatarId], references: [id])

  @@map("users")
}

model avatar {
  id        String   @id @default(cuid())
  url       String
  createdAt DateTime @default(now())

  users User[]
}

model Session {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  expiresAt      DateTime
  token          String   @unique
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(uuid())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  identifier String
  value      String
  expiresAt  DateTime

  @@map("verifications")
}

enum UserRole {
  USER
  ADMIN
}
